<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="vip.lj.store.mapper.UserMapper">
    <insert id="addUser">
        insert
        into t_user (username, password, is_enable)
        values (#{username}, #{password}, 1)
    </insert>
    <select id="getByUsername" resultType="vip.lj.store.pojo.entity.User">
        select *
        from t_user
        where username = #{username}
    </select>
    <select id="getById" resultType="vip.lj.store.pojo.entity.User">
        select *
        from t_user
        where uid = #{id}
    </select>
    <update id="modById">
        update t_user
        <set>
            <if test="phone != null">
                phone = #{phone},
            </if>
            <if test="email != null">
                email = #{email},
            </if>
            <if test="gender != null">
                gender = #{gender},
            </if>
        </set>
        where uid = #{id}
    </update>
    <update id="modPwdById">
        update t_user
        set password = #{newPassword}
        where uid = #{id}
    </update>
</mapper>